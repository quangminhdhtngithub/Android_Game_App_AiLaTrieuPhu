<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/bg_btn">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Bạn Muốn Mua Trợ Giúp Nào"/>
    <Button
        android:id="@+id/btnLoaiMotCauSai"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Loại 1 câu trả lời sai: -20000$"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#fff"/>
    <Button
        android:id="@+id/btnLoaiHaiCauSai"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Loại 2 câu trả lời sai: -50000$"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#fff"/>
    <Button
        android:id="@+id/btnDoiCauHoi"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Đổi câu hỏi: -10000$"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#fff"/>
</LinearLayout>